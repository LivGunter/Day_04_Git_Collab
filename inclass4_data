import numpy as np
import pandas as pd
import matplotlib.pyplot as plt


# PART 1 Olivia 
# Using the Michigan/Huron Dataset, plot the Water Level, the second 
# column, as a function of time years

mhu_data  = pd.read_csv("mhu.csv",delimiter=',',skiprows=0,encoding='utf-8')
plt.plot(mhu_data["time"],mhu_data["lake average"],'cornflowerblue', label ='Michigan/Huron')
plt.title("Michigan/Huron Water Level ")
plt.xlabel("Year")
plt.ylabel("Water Level")

